<h1>Project list</h1>
<table>
  <tr>
    <th>-- Title --</th>
    <th>Created</th>
    <th></th>
    <th></th>
    <th></th>
    <th> -- Project Description -- </th>
  </tr>


  <% @projects.each do |project| %>

      <tr>
        <td><%= project.title %>
        <td><%=  project.created_at.strftime('%m/%d/%Y %H:M') %></td>
        <td><%= image_tag project.image_url(:thumb) %> </td>
        <td><%= link_to 'Show', admin_project_path(project) %></td>
        <td><%= link_to 'Edit', edit_admin_project_path(project) %></td>
        <td><%= link_to "Delete", admin_project_path(project), method: :delete, confirm: "Are you sure?" %></td>
        <td><%= project.description %></td>
      </tr>

  <% end %>

</table>
<br />
<%= link_to 'New Project', new_admin_project_path, :class => "btn btn-primary" %><br />
<%= link_to "Cancel", root_path, :class => "btn" %>

